<div class="row">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post), class:"button tiny" %>
  <%= link_to 'Back', posts_path, class: "button tiny" %>

  <h2>Comments</h2>
  <div class="new-comment">
    <%= render 'comments/form' %>
  </div>
  <div class="comments">
    <% @comments.sort.each do |comment| %>
        <%= render comment %> <br/>
    <% end %>
  </div>
</div>